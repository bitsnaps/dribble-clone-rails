<div class="panel panel-default">
  <div class="panel-heading">
    <%= gravatar_image_tag(comment.user.email.gsub('spam', 'mdeering'), alt: comment.user.name, gravatar: {size: 48}) %>
    <%= comment.name %>
  </div>
  <div class="panel-body">
    <%= comment.response %>
    <br>
    <p><%= @shot.description %></p>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-sm-6">
      <%= verbose_date(comment.created_at) %>
      by <%= comment.user.name %>
      </div>
      <div class="col-sm-6">
        <div class="pull-right">
        <% if (user_signed_in? && (current_user.id == comment.user_id)) %>
          <%= link_to 'Delete', [comment.shot, comment], method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: 'Are you sure you want to delete this comment?'} %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
